files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/01_create_data_dir.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      mkdir -p /var/app/data
      chmod 755 /var/app/data
      chown webapp:webapp /var/app/data

  "/opt/elasticbeanstalk/hooks/appdeploy/pre/02_copy_database.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      # Copy database if it exists in the application bundle
      if [ -f /var/app/ondeck/data/spendsense.db ]; then
        cp /var/app/ondeck/data/spendsense.db /var/app/data/spendsense.db
        chmod 644 /var/app/data/spendsense.db
        chown webapp:webapp /var/app/data/spendsense.db
      fi




