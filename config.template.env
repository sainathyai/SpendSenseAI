# SpendSenseAI Configuration Template
# Copy this file to .env and update values as needed
# .env is gitignored for security

# Database Configuration
DATABASE_PATH=data/spendsense.db

# API Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=True

# Data Generation
SYNTHETIC_USER_COUNT=100
RANDOM_SEED=42  # For reproducible data generation

# Feature Detection
SUBSCRIPTION_MIN_OCCURRENCES=3
SUBSCRIPTION_WINDOW_DAYS=90
CREDIT_HIGH_UTILIZATION_THRESHOLD=0.50
CREDIT_WARNING_UTILIZATION_THRESHOLD=0.30
CREDIT_CRITICAL_UTILIZATION_THRESHOLD=0.80
SAVINGS_GROWTH_THRESHOLD=0.02
SAVINGS_MIN_INFLOW=200

# Income Analysis
INCOME_VARIABLE_PAY_GAP_DAYS=45
INCOME_LOW_BUFFER_MONTHS=1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/spendsense.log

# Evaluation
LATENCY_TARGET_SECONDS=5
MIN_BEHAVIORS_PER_USER=3

# LLM Configuration (OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=200
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=10
ENABLE_LLM=true
LLM_FALLBACK_TO_TEMPLATES=true

# AWS Security Configuration (Production)
# Option 1: AWS Secrets Manager (Recommended)
USE_AWS_SECRETS=false  # Set to true to use AWS Secrets Manager (for production)
# Generic OpenAI API key (contains all keys: api_key1, api_key2, apiKey)
AWS_SECRET_NAMES=your-secret-name-here
# Or use single secret (backward compatibility):
# AWS_SECRET_NAME=your-secret-name-here
AWS_REGION=us-east-1

# Option 2: Lambda Proxy (Maximum Security)
USE_LAMBDA_PROXY=false  # Set to true to use Lambda proxy
LAMBDA_FUNCTION_NAME=your-lambda-function-name-here

# AWS Credentials (use IAM roles in production, not access keys)
# AWS_ACCESS_KEY_ID=your-access-key  # Only for local/dev
# AWS_SECRET_ACCESS_KEY=your-secret-key  # Only for local/dev
# Note: If using AWS CLI, credentials are loaded from ~/.aws/credentials automatically

# Alert Notification Configuration
# Slack Webhook (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SLACK_CHANNEL=#alerts

# Email Alerts (optional)
# ALERT_EMAIL_RECIPIENTS=admin@example.com,ops@example.com
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=alerts@spendsense.ai

# PagerDuty (optional, for critical alerts only)
# PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key

